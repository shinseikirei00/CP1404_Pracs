<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0.7, 0.8

<Button>:
#    font_name: 'BuxtonSketch.ttf'
    font_size: 56
    background_normal: ''
    background_down: 'atlas://data/images/defaulttheme/button'
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1

BoxLayout:
    orientation: 'vertical'
    #    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            font_size: 48
            text: '0'
            on_text: app.handle_calculate(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: up_button
                text: 'Up'
                on_release: app.increment_value(1, input_miles.text)

            Button:
                id: down_button
                text: 'Down'
                on_release: app.increment_value(-1, input_miles.text)

#    Button:
#        id: convert
#        font_size: 48
#        text: 'Convert miles to km'
#        on_release: app.handle_calculate(input_miles.text)

    Label:
        font_size: 48
        id: output_label
        text: ''
        color: (0, 0, 0, 1)
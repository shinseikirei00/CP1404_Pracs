BoxLayout:
    orientation: 'vertical'
    #    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            font_size: 48
            text: '0'
            on_text: app.handle_calculate(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: up_button
                text: 'Up'
                on_release: app.increment_value(1, input_miles.text)

            Button:
                id: down_button
                text: 'Down'
                on_release: app.increment_value(-1, input_miles.text)

#    Button:
#        id: convert
#        font_size: 48
#        text: 'Convert miles to km'
#        on_release: app.handle_calculate(input_miles.text)

    Label:
        font_size: 48
        id: output_label
        text: ''
        color: (1, 1, 0, 1)